apiVersion: batch/v1
kind: Job
metadata:
  name: db-setup
  namespace: 20890-ideaforge-ai-dev-58a50
  labels:
    app: db-setup
    component: database
spec:
  template:
    metadata:
      labels:
        app: db-setup
        component: database
    spec:
      restartPolicy: OnFailure
      containers:
      - name: db-setup
        image: pgvector/pgvector:pg15
        command:
        - /bin/bash
        - -c
        - |
          set -e
          echo "ðŸ”„ Starting database setup..."
          
          # Wait for PostgreSQL to be ready
          echo "â³ Waiting for PostgreSQL to be ready..."
          until pg_isready -h postgres -U agentic_pm -d agentic_pm_db; do
            echo "   PostgreSQL not ready, waiting..."
            sleep 2
          done
          echo "âœ… PostgreSQL is ready"
          
          # Run base schema first (if available)
          echo "ðŸ”„ Running base schema initialization..."
          TABLE_COUNT=$$(psql -h postgres -U agentic_pm -d agentic_pm_db -t -c "SELECT COUNT(*) FROM information_schema.tables WHERE table_schema = 'public';" 2>/dev/null | xargs || echo "0")
          if [ "$$TABLE_COUNT" = "0" ]; then
            if [ -f /init-scripts/01-init-schema.sql ]; then
              echo "   Running base schema from init-scripts: 01-init-schema.sql"
              psql -h postgres -U agentic_pm -d agentic_pm_db -f /init-scripts/01-init-schema.sql 2>&1 | grep -v "NOTICE" | grep -v "already exists" || true
              echo "   âœ… Base schema initialized"
            else
              echo "   âš ï¸  Base schema not found at /init-scripts/01-init-schema.sql"
              echo "   âš ï¸  Migrations may fail without base schema"
            fi
          else
            echo "   âœ… Tables already exist ($$TABLE_COUNT tables), skipping base schema"
          fi
          
          # Run migrations in sorted order
          echo "ðŸ”„ Running database migrations..."
          if [ -d /migrations ]; then
            # Sort migrations by filename to ensure correct order
            for migration in $$(ls -1 /migrations/*.sql 2>/dev/null | sort); do
              if [ -f "$$migration" ]; then
                migration_name=$$(basename $$migration)
                echo "   Running migration: $$migration_name"
                # Run migration and capture output
                psql -h postgres -U agentic_pm -d agentic_pm_db -f "$$migration" 2>&1 | \
                  grep -v "NOTICE" | \
                  grep -v "^$" | \
                  grep -v "already exists" | \
                  grep -v "does not exist" || true
                echo "   âœ… Migration $$migration_name completed"
              fi
            done
          else
            echo "   âš ï¸  Migrations directory /migrations not found"
          fi
          echo "âœ… Migrations complete"
          
          # Check if database is already seeded
          echo "ðŸ” Checking if database needs seeding..."
          PRODUCT_COUNT=$(psql -h postgres -U agentic_pm -d agentic_pm_db -t -c "SELECT COUNT(*) FROM products;" 2>/dev/null | xargs || echo "0")
          
          if [ "$PRODUCT_COUNT" = "0" ] || [ -z "$PRODUCT_COUNT" ]; then
            echo "ðŸŒ± Seeding database with sample data..."
            if [ -f /seed/seed_sample_data.sql ]; then
              psql -h postgres -U agentic_pm -d agentic_pm_db -f /seed/seed_sample_data.sql 2>&1 | grep -v "NOTICE" || true
              echo "âœ… Database seeded"
            else
              echo "âš ï¸  Seed file not found at /seed/seed_sample_data.sql"
            fi
          else
            echo "âœ… Database already contains $PRODUCT_COUNT products, skipping seed"
          fi
          
          # Verify setup
          echo "ðŸ“Š Verifying database setup..."
          psql -h postgres -U agentic_pm -d agentic_pm_db -c "
            SELECT 
              (SELECT COUNT(*) FROM products) as products,
              (SELECT COUNT(*) FROM user_profiles) as users,
              (SELECT COUNT(*) FROM tenants) as tenants;
          " 2>&1 | grep -E "[0-9]+" || true
          
          echo "âœ… Database setup complete!"
        env:
        - name: PGPASSWORD
          valueFrom:
            secretKeyRef:
              name: ideaforge-ai-secrets
              key: POSTGRES_PASSWORD
        - name: POSTGRES_USER
          valueFrom:
            configMapKeyRef:
              name: ideaforge-ai-config
              key: POSTGRES_USER
        - name: POSTGRES_DB
          valueFrom:
            configMapKeyRef:
              name: ideaforge-ai-config
              key: POSTGRES_DB
        volumeMounts:
        - name: migrations
          mountPath: /migrations
          readOnly: true
        - name: seed
          mountPath: /seed
          readOnly: true
        - name: init-scripts
          mountPath: /init-scripts
          readOnly: true
      volumes:
      - name: migrations
        configMap:
          name: db-migrations
      - name: seed
        configMap:
          name: db-seed
      - name: init-scripts
        configMap:
          name: postgres-init-scripts
          optional: true
      initContainers:
      - name: wait-for-postgres
        image: postgres:15-alpine
        command:
        - sh
        - -c
        - |
          until pg_isready -h postgres -U agentic_pm; do
            echo "Waiting for PostgreSQL..."
            sleep 2
          done
          echo "PostgreSQL is ready!"
        env:
        - name: PGPASSWORD
          valueFrom:
            secretKeyRef:
              name: ideaforge-ai-secrets
              key: POSTGRES_PASSWORD
        - name: POSTGRES_USER
          valueFrom:
            configMapKeyRef:
              name: ideaforge-ai-config
              key: POSTGRES_USER

