# IdeaForge AI - Secrets Template for Kind Deployment
# Copy this file to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to git

# Database Secrets
POSTGRES_PASSWORD: "devpassword"  # Change in production

# AI Provider API Keys (REQUIRED)
OPENAI_API_KEY: "sk-your-openai-api-key-here"
ANTHROPIC_API_KEY: "sk-ant-your-anthropic-api-key-here"
GOOGLE_API_KEY: "your-google-api-key-here"

# Design Tool API Keys (REQUIRED)
V0_API_KEY: "your-vercel-v0-api-key-here"
LOVABLE_API_KEY: ""  # Not required for Lovable

# Integration Tokens (REQUIRED)
GITHUB_TOKEN: "ghp_your-github-pat-token-here"
GITHUB_ORG: "your-github-org-name"

# Atlassian Configuration (REQUIRED for Jira & Confluence)
# Option 1: Use single email + token for both (recommended)
ATLASSIAN_EMAIL: "your-email@example.com"
ATLASSIAN_API_TOKEN: "your-atlassian-api-token-here"
# Option 2: Use separate credentials (if different accounts)
# JIRA_URL: "https://your-domain.atlassian.net"
# JIRA_EMAIL: "your-email@example.com"
# JIRA_API_TOKEN: "your-jira-api-token-here"
# CONFLUENCE_URL: "https://your-domain.atlassian.net"
# CONFLUENCE_EMAIL: "your-email@example.com"
# CONFLUENCE_API_TOKEN: "your-confluence-api-token-here"

# Application Secrets (CHANGE IN PRODUCTION!)
SESSION_SECRET: "your-secure-random-secret-key-change-in-production"
API_KEY_ENCRYPTION_KEY: "your-encryption-key-change-in-production"

# Optional: Okta Configuration
OKTA_CLIENT_ID: ""
OKTA_CLIENT_SECRET: ""
OKTA_ISSUER: ""

