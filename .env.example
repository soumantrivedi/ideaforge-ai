# ==============================================
# Agentic PM Platform - Environment Configuration
# ==============================================

# Database Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
DATABASE_URL=postgresql://user:password@postgres:5432/agentic_pm_db

# AI Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...

# Okta OAuth/SSO Configuration
VITE_OKTA_CLIENT_ID=your_okta_client_id
VITE_OKTA_ISSUER=https://your-domain.okta.com/oauth2/default
OKTA_CLIENT_ID=your_okta_client_id
OKTA_CLIENT_SECRET=your_okta_client_secret
OKTA_ISSUER=https://your-domain.okta.com/oauth2/default

# Jira Integration
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token

# Confluence Integration
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_EMAIL=your-email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_ORG=your-organization

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Backend Configuration
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Session Configuration
SESSION_SECRET=your_secure_random_secret_key_here
SESSION_EXPIRES_IN=86400

# Agent Configuration
AGENT_MODEL_PRIMARY=gpt-4o
AGENT_MODEL_SECONDARY=claude-sonnet-4-5-20250929
AGENT_MODEL_TERTIARY=gemini-2.0-flash-exp

# MCP Server Configuration
MCP_GITHUB_URL=http://mcp-github:8001
MCP_JIRA_URL=http://mcp-jira:8002
MCP_CONFLUENCE_URL=http://mcp-confluence:8003

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_AGNO_FRAMEWORK=true
FEATURE_FAST_MCP=true
FEATURE_MULTI_TENANT=true
FEATURE_LEADERSHIP_VIEW=true

# Enterprise Settings
TENANT_MODE=multi
MAX_PRODUCTS_PER_USER=10
MAX_TEAM_MEMBERS=50

# McKinsey CodeBeyond Standards
CODEBEYOND_TEMPLATES_PATH=./templates/codebeyond
PRD_VALIDATION_STRICT_MODE=true
