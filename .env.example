# ============================================================================
# IdeaForge AI - Environment Variables Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains sensitive information
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=agentic_pm
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=agentic_pm_db
DATABASE_URL=postgresql://agentic_pm:devpassword@postgres:5432/agentic_pm_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379/0

# ============================================================================
# AI Provider API Keys (REQUIRED)
# ============================================================================
# OpenAI API Key - Required for GPT models
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key - Required for Claude models
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google API Key - Required for Gemini models
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# Design Tool API Keys (REQUIRED)
# ============================================================================
# Vercel V0 API Key - Required for V0 design generation
# Get your key from: https://v0.app/chat/settings/billing
# Note: V0 uses API keys for authentication, not tokens
V0_API_KEY=your-v0-api-key-here

# Lovable AI - No API key required, uses URL-based generation
# See: https://docs.lovable.dev/integrations/build-with-url
# LOVABLE_API_KEY=not-required

# ============================================================================
# Integration Tokens (REQUIRED for integrations)
# ============================================================================
# GitHub Personal Access Token (PAT)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_TOKEN=ghp_your-github-pat-token-here
GITHUB_ORG=your-github-org-name

# Atlassian (Jira & Confluence) API Token
# Create at: https://id.atlassian.com/manage-profile/security/api-tokens
# Use your email + API token for authentication
ATLASSIAN_EMAIL=your-email@example.com
ATLASSIAN_API_TOKEN=your-atlassian-api-token-here
JIRA_URL=https://your-domain.atlassian.net
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki

# ============================================================================
# Okta OAuth/SSO Configuration (Optional)
# ============================================================================
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret
OKTA_ISSUER=https://your-domain.okta.com/oauth2/default

# ============================================================================
# Application Configuration
# ============================================================================
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000
LOG_LEVEL=info
SESSION_SECRET=your-secure-random-secret-key-change-this-in-production
SESSION_EXPIRES_IN=86400
API_KEY_ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# ============================================================================
# Agent Model Configuration
# ============================================================================
AGENT_MODEL_PRIMARY=gpt-4o
AGENT_MODEL_SECONDARY=claude-sonnet-4-5-20250929
AGENT_MODEL_TERTIARY=gemini-2.0-flash-exp

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_AGNO_FRAMEWORK=true
FEATURE_FAST_MCP=true
FEATURE_MULTI_TENANT=true
FEATURE_LEADERSHIP_VIEW=true

# ============================================================================
# CORS Configuration (for Kubernetes deployments)
# ============================================================================
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:8080,http://ideaforge.local

# ============================================================================
# MCP Server Configuration (Optional)
# ============================================================================
MCP_GITHUB_URL=http://mcp-github:8001
MCP_JIRA_URL=http://mcp-jira:8002
MCP_CONFLUENCE_URL=http://mcp-confluence:8003

# ============================================================================
# Enterprise Settings
# ============================================================================
TENANT_MODE=multi
MAX_PRODUCTS_PER_USER=10
MAX_TEAM_MEMBERS=50
